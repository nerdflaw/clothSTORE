<!-- including admin head  -->
<%- include('../../partials/admin-partials/admin-head.ejs') %>

<body>

  <!-- including admin nav  -->
  <%- include('../../partials/admin-partials/admin-nav.ejs') %>

  <section>
    <div class="container-fluid">
      <div class="row d-flex justify-content-around">
        <div class="col-sm-12 col-md-12 col-lg-6 d-flex justify-content-center align-items-center border-2 border-end" style="height: 600px;">
          <img class="login-image img-fluid" src="/images/login.png" alt="Login page image" style="width: 500px">
        </div>
        <div class="col-sm-12 col-md-12 col-lg-6 d-flex justify-content-center align-items-center">
          <div class="loginDiv" style="width: 500px;">
            <h4 class="text-center text-black font-size-bold-title">Edit a coupon</h4>

            <% if (message) { %>
              <script>
                document.addEventListener('DOMContentLoaded', function () {
                  toastMessage("<%= message %>");
                });
              </script>
            <% } %>

            <form id="couponForm" action="/admin-edit-coupon/<%-editCoupon._id%>" method="POST">
              <div class="mb-3 form-group">
                <label for="coupon" class="form-label text-black font-size">Coupon name</label>
                <input value="<%-editCoupon.coupon%>" type="text" class="form-control bg-white text-black font-size availability-check" id="coupon" name="coupon" required>
              </div>
              <div class="mb-3 form-group">
                <label for="couponDiscount" class="form-label text-black font-size">Coupon value ( % )</label>
                <input value="<%-editCoupon.couponValue%>" type="text" class="form-control bg-white text-black font-size availability-check" id="couponDiscount" name="couponDiscount" required>
              </div>
              <div class="mb-3 form-group" hidden>
                <label for="couponDiscount" class="form-label text-black font-size">Coupon name</label>
                <input value="<%-editCoupon.couponCode %>" type="text" class="form-control bg-white text-black font-size availability-check" id="couponCode" name="couponCode" required>
              </div>
              <div class="d-flex justify-content-around align-items-center flex-wrap">
                <a class="btn btn-dark my-3 px-5 py-2 text-white font-size-bold" href="/admin-coupon-management">cancel</a>
                <button type="submit" class="btn btn-danger my-3 px-5 py-2 text-white font-size-bold submitButton">confirm</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- including admin footer  -->
  <%- include('../../partials/admin-partials/admin-footer.ejs') %>

</body>

</html>