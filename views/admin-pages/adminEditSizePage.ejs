<!-- including admin head  -->
<%- include('../../partials/admin-partials/admin-head.ejs') %>

<body>

  <!-- including admin nav  -->
  <%- include('../../partials/admin-partials/admin-nav-login.ejs') %>

  <section>
    <div class="container-fluid">
      <div class="row d-flex justify-content-around">
        <div class="col-sm-12 col-md-12 col-lg-6 d-flex justify-content-center align-items-center border-2 border-end" style="height: 600px;">
          <img class="login-image img-fluid" src="/images/login.png" alt="Login page image" style="width: 500px">
        </div>
        <div class="col-sm-12 col-md-12 col-lg-6 d-flex justify-content-center align-items-center">
          <div class="loginDiv" style="width: 500px;">
            <h4 class="text-center text-black font-size-bold-title">Edit size</h4>

            <form id="sizeForm" action="/admin-edit-size/<%-editSize._id%>" method="POST">
              <div class="mb-3 form-group">
                <label for="size" class="form-label text-black font-size">Size name</label>
                <input value="<%-editSize.size%>" type="text" class="form-control bg-whit text-black font-size availability-check" id="size" name="size" required>
              </div>
              
              <div class="d-flex justify-content-around align-items-center flex-wrap">
                <a class="btn btn-dark my-3 px-5 py-2 text-white font-size-bold" href="/admin-size-management">cancel</a>
                <button type="submit" class="btn btn-danger my-3 px-5 py-2 text-white font-size-bold submitButton">confirm</button>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- including admin footer  -->
  <%- include('../../partials/admin-partials/admin-footer.ejs') %>

</body>

</html>