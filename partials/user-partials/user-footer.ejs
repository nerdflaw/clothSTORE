        event.preventDefault();

        const productIdValue = button.value;
        const url = `/user-add-wish-list/${productIdValue}`;

        fetch(url)
          .then(response => {
            if (!response.ok) {
              throw new Error('Network response was not ok');
            }
            return response.json();
          })
          .then(data => {
            window.location.reload();
          })
          .catch(error => {
